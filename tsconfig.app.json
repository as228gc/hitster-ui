{
  "compilerOptions": {
    /* Target modern JavaScript */
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    /* Module resolution for Node.js */
    "moduleResolution": "node",

    /* JSX settings for React */
    "jsx": "react-jsx",

    /* TypeScript's strict type-checking options */
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Ignore library declaration checks */
    "skipLibCheck": true,

    /* Prevent TypeScript from emitting JS files */
    "noEmit": true
  },
  "include": ["src"]
}